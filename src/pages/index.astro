---
import BaseLayout from "../layouts/BaseLayout.astro";

const SITE = "https://SEU-DOMINIO.com.br"; // depois troca

const title = "Sweet Child | Palhas italianas em Cataguases-MG";
const description =
  "Palhas italianas artesanais em Cataguases-MG para festas e eventos. Encomende pelo site e receba atendimento rápido.";

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "FoodEstablishment",
  "name": "Sweet Child",
  "url": SITE,
  "telephone": "+5532999999999",
  "areaServed": {
    "@type": "City",
    "name": "Cataguases",
    "addressRegion": "MG",
    "addressCountry": "BR"
  },
  "sameAs": [
    "https://www.instagram.com/sweetchild"
  ]
};

---

<BaseLayout title={title} description={description} jsonLd={jsonLd} ogImage="/og-image.jpg">
  <!-- HERO -->
  <section class="bg-pink-50 py-20">
    <div class="max-w-5xl mx-auto px-6 text-center">
      <h1 class="text-4xl md:text-5xl font-bold mb-6">
        Palhas italianas artesanais para momentos especiais
      </h1>
      <p class="text-lg md:text-xl mb-8 text-gray-700">
        Encomendas sob medida para festas, eventos e datas especiais em Cataguases-MG.
      </p>

      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a
          href="LINK_DO_SISTEMA_DE_ENCOMENDAS"
          class="bg-pink-600 text-white px-8 py-4 rounded-lg font-semibold hover:bg-pink-700 transition"
        >
          Fazer encomenda
        </a>

        <a
          href="https://wa.me/5532999999999"
          class="border border-pink-600 text-pink-600 px-8 py-4 rounded-lg font-semibold hover:bg-pink-100 transition"
        >
          Falar no WhatsApp
        </a>
      </div>
    </div>
  </section>

  <!-- BENEFÍCIOS -->
  <section class="py-16">
    <div class="max-w-5xl mx-auto px-6 grid md:grid-cols-3 gap-8 text-center">
      <div>
        <h3 class="font-semibold text-xl mb-2">Artesanal de verdade</h3>
        <p class="text-gray-600">
          Produção cuidadosa, com ingredientes selecionados e muito carinho.
        </p>
      </div>
      <div>
        <h3 class="font-semibold text-xl mb-2">Ideal para eventos</h3>
        <p class="text-gray-600">
          Casamentos, aniversários, eventos corporativos e lembrancinhas.
        </p>
      </div>
      <div>
        <h3 class="font-semibold text-xl mb-2">Entrega sob medida</h3>
        <p class="text-gray-600">
          Produzimos conforme sua necessidade, com apresentação impecável.
        </p>
      </div>
    </div>
  </section>

  <!-- CTA FINAL -->
  <section class="bg-pink-600 py-16 text-center text-white">
    <h2 class="text-3xl font-bold mb-4">
      Garanta suas palhas italianas
    </h2>
    <p class="mb-6">
      Faça sua encomenda com antecedência e surpreenda seus convidados.
    </p>
    <a
      href="LINK_DO_SISTEMA_DE_ENCOMENDAS"
      class="bg-white text-pink-600 px-8 py-4 rounded-lg font-semibold hover:bg-pink-100 transition"
    >
      Fazer encomenda agora
    </a>
  </section>
</BaseLayout>
